@using WMS.Common.Contract
@using WMS.Common.Utility
@using WMS.Common.Web.Controls
@using WMS.Account.Contract
@using WMS.Core.Config
@using WMS.Web;
@model PagedList<UserClassInfo>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th style="width: 8px;">
                <input type="checkbox" id="checkall" class="group-checkable" />
            </th>
            <th>
                登录账号 @*<span style="float:right; width:30px; text-align:right;"><a href="@this.Request.Url&OrderAsc=00">↓</a>↑</span>*@
            </th>
            <th>
                用户姓名
            </th>
            <th>
                邮箱
            </th>
            <th>
                电话
            </th>
            <th class="hidden-480">
                角色
            </th>
            <th>
                功能
            </th>
            <th>
                激活
            </th>
            <th>
                操作
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null){foreach (var m in Model)
        {
            <tr>
                <td>
                    1
                </td>
                <td>
                    @m.LoginAccount
                </td>
                <td>
                    @m.NickName
                </td>
                <td>
                    @m.Mobile
                </td>
                <td>
                    @m.EnterpriseName
                </td>
                <td>
                    @m.DepartmentName
                </td>
                <td class="hidden-480"></td>
                <td>
                    <span class="label label-@(m.Status.Equals(0)  ? "success" : "inverse")">@m.Status</span>
                </td>
                <td>
                    @*<a class="btn mini purple thickbox" title='编辑用户资料' href="@Url.Action("Edit", new { id = m.UserId })?TB_iframe=true&height=350&width=500">
                            <i class="icon-edit"></i>
                            编辑
                        </a>*@


                    <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                        <a class="blue" href="#">
                            <i class="icon-zoom-in bigger-130"></i>
                        </a>

                        <a class="green" href="#">
                            <i class="icon-pencil bigger-130"></i>
                        </a>

                        <a class="red" href="#">
                            <i class="icon-trash bigger-130"></i>
                        </a>
                    </div>

                    <div class="visible-xs visible-sm hidden-md hidden-lg">
                        <div class="inline position-relative">
                            <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown">
                                <i class="icon-caret-down icon-only bigger-120"></i>
                            </button>

                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">
                                <li>
                                    <a href="#" class="tooltip-info" data-rel="tooltip" title="View">
                                        <span class="blue">
                                            <i class="icon-zoom-in bigger-120"></i>
                                        </span>
                                    </a>
                                </li>

                                <li>
                                    <a href="#" class="tooltip-success" data-rel="tooltip" title="Edit">
                                        <span class="green">
                                            <i class="icon-edit bigger-120"></i>
                                        </span>
                                    </a>
                                </li>

                                <li>
                                    <a href="#" class="tooltip-error" data-rel="tooltip" title="Delete">
                                        <span class="red">
                                            <i class="icon-trash bigger-120"></i>
                                        </span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>


                </td>
            </tr>
        }
        }
    </tbody>
</table>
<div>
    @Html.AjaxPager(Model, new PagerOptions() { PageIndexParameterName = "PageIndex", ShowTotalItemCount = true},
                                     new AjaxOptions { UpdateTargetId = "userDvOrder", LoadingElementId = "loadDiv" })
</div>